<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hongdian.plat.term.mapper.TermTypeMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.hongdian.plat.term.entity.TermType">
		<id column="ID" property="id" />
		<result column="NAME" property="name" />
		<result column="REMARK" property="remark" />
	</resultMap>
	
	<resultMap id="DtoResultMap" type="com.hongdian.plat.term.dto.TermTypeStatusDto" extends="BaseResultMap">
		<collection property="descDtoList" column="id" select="com.hongdian.plat.term.mapper.TermStatusDescMapper.selectTermDescDtoListByType" />                     
	</resultMap>
	
	<select id="selectTermTypeStatusDtoList" parameterType="java.util.HashMap" resultMap="DtoResultMap" resultType="com.hongdian.plat.term.dto.TermTypeStatusDto">
		select * from term_type obj
	</select>

    <select id="findTermTypesList" parameterType="java.util.HashMap" resultMap="BaseResultMap" resultType="com.hongdian.plat.term.entity.TermType">
		select * from term_type obj
	</select>
</mapper>
